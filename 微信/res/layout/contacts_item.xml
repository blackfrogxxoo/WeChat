<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_item_height" >

    <RelativeLayout
        android:id="@+id/contact_icon_container"
        android:layout_width="@dimen/chat_item_height"
        android:layout_height="@dimen/chat_item_height" >

        <ImageView
            android:id="@+id/friend_icon"
            android:layout_width="@dimen/chat_icon_height"
            android:layout_height="@dimen/chat_icon_height"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/chat_item_height"
        android:layout_toRightOf="@id/contact_icon_container" >

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerVertical="true"
            android:text="昵称"
            android:textSize="@dimen/contact_text_size" />

        

        
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/sin_line"
        android:layout_alignParentBottom="true"
        android:background="#dddddd"
         />

</RelativeLayout>